    <update id="updateMemo">
        update `lemo_member_userinfo` set `memo`=#{memo} where `user_id`=#{user_id};
    </update>

    <!-- 관리자 - 예약 - 메모 입력 -->
    <update id="updateMemoInRes">
        update `lemo_product_reservation` set `res_memo`=#{res_memo} where `res_no`=#{res_no};
    </update>

